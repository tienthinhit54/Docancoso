@model IEnumerable<Docancoso.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="Text-align:Center; color:red"> SÁCH MỚI </h3>
@foreach (var sANPHAM in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "dtStore", new { id = sANPHAM.Masp})">
                <img alt="@sANPHAM.Tensp" src="~/imgsanpham/@sANPHAM.Anhbia" width="200" />
                <div>
                    <br />
                    <h4 style="text-align:center">
                        @sANPHAM.Tensp
                    </h4>
                    <p></p>
                </div>
                <div class="ratings">
                    <p class="pull-right">15 reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star">
                        </span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
        </div>
    </div>
}
